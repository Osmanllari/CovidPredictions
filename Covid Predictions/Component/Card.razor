<div class="card" style="width: @Width; height: @Height;">
  <img src="" class="card-img-top" alt="">
  <div class="card-body">
      @Body
  </div>
</div>

@code {
    [Parameter] 
    public RenderFragment? Body { get; set; }
    
    [Parameter] 
    public string? Width { get; set; }
    
    [Parameter] 
    public string? Height { get; set; }
}
